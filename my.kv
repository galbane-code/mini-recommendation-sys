
<LoginWindow>:
    name: "login"

    cur_location: cur_location
    duration: duration
    num_rec: num_rec

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: 'giphy.gif'
        allow_strech: True
        anim_delay:0.04
        pos_hint:{"x":0,"top":1.1}
        size_hint: 0.2,0.35

    FloatLayout:
        background: "background.png"

        Label:
            text:"Current Location: "
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15
            color: (66/255, 135/255, 245/255,1)

        TextInput:
            id: cur_location
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Trip Duration: "
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15
            color:(66/255, 135/255, 245/255,1)

        TextInput:
            id: duration
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Label:
            text:"number of recommendations: "
            pos_hint: {"x":0.1, "top":0.5}
            size_hint: 0.35, 0.15
            color:(66/255, 135/255, 245/255,1)

        TextInput:
            id: num_rec
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top":0.5}
            size_hint: 0.4, 0.15


        Button:
            background_color: (66/255, 135/255, 245/255,1)
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Submit"
            on_release:
                root.recBtn()



